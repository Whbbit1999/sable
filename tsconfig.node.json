{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "jsx": "preserve",
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite-config/**/*.ts",
    "mock/**/*.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "**/package.json",
    "packages/**/*.ts",
    "packages/**/*.vue",
    "apps/**/*.vue",
    "apps/**/*.ts"
  ]
}
